# Backend Configuration
PORT=5000
NODE_ENV="development"

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting Configuration
# General API Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000          # 15 minutes (in milliseconds)
RATE_LIMIT_MAX_REQUESTS=1000         # Max requests per window per IP

# Development Rate Limiting (More lenient)
DEV_RATE_LIMIT_WINDOW_MS=60000       # 1 minute for development
DEV_RATE_LIMIT_MAX_REQUESTS=1000     # Very high limit for development

# Notice-specific Rate Limiting
NOTICE_CREATION_WINDOW_MS=900000     # 15 minutes for notice creation
NOTICE_CREATION_MAX_REQUESTS=20      # Max 20 notices created per window per user
NOTICE_UPDATE_WINDOW_MS=300000       # 5 minutes for notice updates
NOTICE_UPDATE_MAX_REQUESTS=30        # Max 30 notice updates per window per user
NOTICE_API_WINDOW_MS=60000           # 1 minute for general notice API calls
NOTICE_API_MAX_REQUESTS=100          # Max 100 notice API requests per window per user

# Production Recommendations (uncomment for production):
# RATE_LIMIT_WINDOW_MS=900000        # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100        # Stricter limit for production
# NOTICE_CREATION_MAX_REQUESTS=10    # Reduce spam in production
# NOTICE_UPDATE_MAX_REQUESTS=20      # Reduce excessive updates

# Session Configuration
SESSION_SECRET="your-session-secret-key"

# Google Calendar (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# YouTube API (For Live Classes)
YOUTUBE_API_KEY="your-youtube-api-key"